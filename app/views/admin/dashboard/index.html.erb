<h1>Admin Dashboard</h1>

<div id='links'>
  <%= link_to 'Admin Merchants', admin_merchants_path %>
  <%= link_to 'Admin Invoices', admin_invoices_path %>
</div>

<div id='statistics'>
  <% @top_customers.each do |cust| %>
    <%=  "#{cust.customer_name}: #{cust.transaction_count}" %>
  <% end %>
</div>

<div id="pending-invoices">
  <% @pending_invoices.each do |invoice| %>
    <p>Invoice <%= link_to invoice.id, admin_invoice_path(invoice) %>, Created at: <%= invoice.created_at.strftime("%A, %B %e, %Y") %></p>
  <% end %>
</div>
