<%= @merchant.name %>

<%= link_to 'Items', merchant_items_path(@merchant) %>
<%= link_to 'Invoices', merchant_invoices_path(@merchant) %><br>

<h5>Top 5 customers:</h5>
<% @customers.each do |customer| %><br>
    Customer Name: <%= customer.customer_name %><br>
    Number of Successful Transactions: <%= customer.transaction_count %><br>
<% end %>

<h5>Items Ready to Ship:</h5>
<% @items.each do |item| %><br>
    Item Name: <%= item.name %><br>
    Created at: <%= item.invoices_created_at.strftime('%A, %B %-d, %Y') %><br>
    Invoice ID: <%= link_to item.invoices_id , merchant_invoice_path(@merchant.id, item.invoices_id) %><br>
<% end %>
