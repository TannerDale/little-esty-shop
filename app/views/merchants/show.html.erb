<%= @merchant.name %>

<%= link_to 'Items', merchant_items_path(@merchant) %>
<%= link_to 'Invoices', merchant_invoices_path(@merchant) %><br>

<h5>Top 5 customers:</h5>
<% @customers.each do |customer| %><br>
    Customer Name: <%= customer[0] %><br>
    Number of Successful Transactions: <%= customer[1] %><br>
<% end %>

<h5>Items Ready to Ship:</h5>
<% @invoices.each do |invoice| %><br>
    Item Name: <%= invoice[0] %><br>
    Invoice ID: <%= link_to invoice[1], merchant_invoice_path(@merchant.id, invoice[1]) %><br>
<% end %>
